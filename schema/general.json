{
  "title": "General",
  "type": "object",
  "required": [
    "file_name",
    "full_path",
    "tags",
    "creation_date",
    "last_modified_date",
    "contributors"
  ],
  "properties": {
    "file_name": {
      "type": "string",
      "description": "Name of the file itself",
      "default": "<file name>"
    },
    "full_path": {
      "type": "string",
      "format": "uri",
      "description": "Full path/uri of file location",
      "default": "<uri>"
    },
    "file_description": {
      "type": "string",
      "format": "textarea",
      "description": "Description of the file"
    },
    "tags": {
      "type": "array",
      "format": "table",
      "title": "Tags",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "title": "Tag"
      }
    },
    "creation_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "last_modified_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "contributors": {
      "type": "array",
      "format": "table",
      "title": "Contributors",
      "uniqueItems": true,
      "items": {
        "title": "Contributor",
        "$ref": "contributor.json"
      }
    },
    "data_policy": {
      "type": "string",
      "enum": [
        "Internal",
        "Selected Externals",
        "Public"
      ],
      "description": "Access restrictions of the file",
      "default": "Institution A"
    },
    "specifics": {
      "title": "Specifics",
      "$ref": "specifics.json"
    }
  }
}
