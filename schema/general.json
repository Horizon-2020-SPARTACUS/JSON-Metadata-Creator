{
  "title": "General",
  "type": "object",
  "required": [
    "file_name",
    "full_path",
    "type",
    "creation_date",
    "last_modified_date",
    "contributors"
  ],
  "properties": {
    "file_name": {
      "type": "string",
      "description": "Name of the file itself",
      "default": "<file name>"
    },
    "full_path": {
      "type": "string",
      "format": "uri",
      "description": "Full path/uri of file location",
      "default": "<uri>"
    },
    "type": {
      "type": "string",
      "enum": [
        "pdf",
        "docx",
        "png"
      ]
    },
    "creation_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "last_modified_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "contributors": {
      "type": "array",
      "format": "table",
      "title": "Contributors",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Contributor",
        "properties": {
          "affiliation": {
            "type": "string",
            "enum": [
              "Institution A",
              "Company B"
            ],
            "default": "ISC"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "default": [
        {
          "affiliation": "Institution A",
          "name": "Test User"
        }
      ]
    },
    "details": {
      "oneOf": [
        {
          "$ref": "schema/document.json",
          "title": "Document"
        },
        {
          "$ref": "schema/cad.json",
          "title": "Complex Person"
        }
      ]
    }
  }
}
