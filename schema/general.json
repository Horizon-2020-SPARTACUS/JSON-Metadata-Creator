{
  "title": "General",
  "type": "object",
  "required": [
    "file_name",
    "full_path",
    "tags",
    "creation_date",
    "last_modified_date",
    "contributors"
  ],
  "properties": {
    "file_name": {
      "type": "string",
      "description": "Name of the file itself",
      "default": "<file name>"
    },
    "full_path": {
      "type": "string",
      "format": "uri",
      "description": "Full path/uri of file location",
      "default": "<uri>"
    },
    "tags": {
      "type": "array",
      "format": "table",
      "title": "Tags",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "title": "Tag"
      }
    },
    "creation_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "last_modified_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "contributors": {
      "type": "array",
      "format": "table",
      "title": "Contributors",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Contributor",
        "properties": {
          "affiliation": {
            "type": "string",
            "enum": [
              "Institution A",
              "Company B"
            ],
            "default": "Institution A"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "default": [
        {
          "affiliation": "Institution A",
          "name": "Test User"
        }
      ]
    },
    "specifics": {
      "title": "Specifics",
      "type": "array",
      "format": "tabs",
      "items": {
      "title": "Specific",
      "headerTemplate": "{{i}} - {{self.file_type}}",
        "oneOf": [
          {
            "$ref": "none.json",
            "title": "None"
          },
          {
            "$ref": "document.json",
            "title": "Document"
          },
          {
            "$ref": "cad.json",
            "title": "CAD"
          },
          {
            "$ref": "sourcecode.json",
            "title": "Source Code"
          }
        ]
     }   
    }
  }
}
